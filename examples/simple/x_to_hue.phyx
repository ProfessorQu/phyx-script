fn update(self) {
    let hue = (self.x + 100) / 200 * 360
    self.stroke_color = hsv(hue, 1, 0.7)
    self.color = hsv(hue, 1, 1)
}

objects.add(object {
    gravity: 3,
    bounciness: 1.5,
    color: hsv(0, 1, 1),
    update,
    trail: 10
})

objects.add(object {
    shape: ring,
    size: 100,
    fixed: true
})
